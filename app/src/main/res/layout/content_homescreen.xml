<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_homescreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ansteph.com.cha.view.home.HomeScreen"
    tools:showIn="@layout/activity_homescreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/content_homescreen"
        app:layout_constraintBottom_toBottomOf="@+id/content_homescreen"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_homescreen"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_homescreen"
        app:layout_constraintVertical_bias="0.13"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@mipmap/ic_assess_round"
        android:id="@+id/imgbtnStart"
        android:background="@null"

        app:layout_constraintBottom_toBottomOf="@+id/content_homescreen"
        app:layout_constraintTop_toTopOf="@+id/content_homescreen"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_upload_round"
        android:id="@+id/imageButton2"
        android:background="@null"
        app:layout_constraintRight_toRightOf="@+id/imgbtnStart"
        app:layout_constraintLeft_toLeftOf="@+id/imgbtnStart"
        app:layout_constraintBottom_toBottomOf="@+id/content_homescreen"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnStart"/>

    <TextView
        android:text="Start Assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/content_homescreen"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnStart"
        app:layout_constraintLeft_toLeftOf="@+id/content_homescreen"/>

    <TextView
        android:text="Export Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_homescreen"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_homescreen"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"/>

</android.support.constraint.ConstraintLayout>
