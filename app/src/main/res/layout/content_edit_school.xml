<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_school"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ansteph.com.cha.view.school.EditSchool"
    tools:showIn="@layout/activity_edit_school">


    <RelativeLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="571dp"


        tools:layout_editor_absoluteX="46dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_school_black_24dp"
            android:id="@+id/imageView3"
            android:background="@color/windowBackground"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:layout_width="265dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.25"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginStart="27dp"/>
    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:text="School's Principal's Name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView11"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <TextView
                android:text="Principal's Contact Details"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView12"
                android:gravity="center"
                android:layout_margin="5dp"
                />

            <TextView
                android:text="2nd Contact Person's Name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView15"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <TextView
                android:text="2nd Person's Contact Details"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView16"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <TextView
                android:text="Address Line 1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView13"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <TextView
                android:text="Address Line 2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView14"
                android:layout_margin="5dp"
                android:gravity="center"
                />

            <TextView
                android:text="GPS Coordinate"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/textView17"
                android:layout_margin="5dp"
                android:gravity="center"
                />


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_margin="5dp"
                />
            <EditText
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText6"
                android:layout_margin="5dp"
                />
            <EditText
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText7"
                android:layout_margin="5dp"
                />
            <EditText
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_margin="5dp"
                />

            <EditText
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText9"
                android:layout_margin="5dp"
                />
            <EditText
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText10"
                android:layout_margin="5dp"
                />

            <EditText
                android:layout_width="315dp"
                android:layout_height="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText11"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/textView19"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Please Locate the school to improve the accuracy of the address and GPS coordinate"/>

        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapView"
            android:layout_below="@+id/textView19"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

</LinearLayout>
