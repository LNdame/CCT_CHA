<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_question_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ansteph.com.cha.view.questionnaire.QuestionLanding"
    tools:showIn="@layout/activity_question_landing">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_below="@+id/vsHeader"
        android:padding="6dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

           <ansteph.com.cha.customview.Screening_item
               android:id="@+id/dash_btn_diabetes"
               style="@style/coord"
               app:title="Diabetes Screening"
               app:leadingtitle= "D S"

               >

           </ansteph.com.cha.customview.Screening_item>

            <ansteph.com.cha.customview.Screening_item
                android:id="@+id/dash_btn_oral"
                style="@style/coord"
                app:title="Oral Assessment"
                app:leadingtitle= "O A"
                android:onClick="questionnaireLaunch"
                >

            </ansteph.com.cha.customview.Screening_item>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ansteph.com.cha.customview.Screening_item
                android:id="@+id/dash_btn_visual"
                style="@style/coord"
                app:title="Visual Screening"
                app:leadingtitle= "V S"
                android:onClick="questionnaireLaunch"
                >

            </ansteph.com.cha.customview.Screening_item>

            <ansteph.com.cha.customview.Screening_item
                android:id="@+id/dash_btn_nutritional"
                style="@style/coord"
                app:title="Nutritional Assessment"
                app:leadingtitle= "N A"
                android:onClick="questionnaireLaunch"
                >

            </ansteph.com.cha.customview.Screening_item>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ansteph.com.cha.customview.Screening_item
                android:id="@+id/dash_btn_physical"
                style="@style/coord"
                app:title="Physical Assessment"
                app:leadingtitle= "P A"
                android:onClick="questionnaireLaunch"
                >

            </ansteph.com.cha.customview.Screening_item>

            <ansteph.com.cha.customview.Screening_item
                android:id="@+id/dash_btn_hearing"
                style="@style/coord"
                app:title="Hearing Language Speech"
                app:leadingtitle= "H L S"
                android:onClick="questionnaireLaunch"
                >

            </ansteph.com.cha.customview.Screening_item>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >


            <ansteph.com.cha.customview.Screening_item
                android:id="@+id/dash_btn_BMI"
                style="@style/coord"
                app:title=""
                app:leadingtitle= "BMI"
                android:onClick="questionnaireLaunch"
                android:clickable="true"
                >

            </ansteph.com.cha.customview.Screening_item>

            <ansteph.com.cha.customview.Screening_item
                android:id="@+id/dash_btn_Chronic"
                style="@style/coord"
                app:title="Chronic Disease"
                app:leadingtitle= "C D"
                android:onClick="questionnaireLaunch"
                >

            </ansteph.com.cha.customview.Screening_item>


        </LinearLayout>
    </LinearLayout>





</LinearLayout>
