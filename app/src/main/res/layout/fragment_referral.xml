<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ansteph.com.cha.view.questionnaire.ReferralFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp"


                  android:orientation="vertical">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Referral: "
                android:textSize="16dp" />

            <RadioGroup

                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radrefYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:checked="true"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radrefNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />


            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If yes, to where: "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editReferee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapSentences" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of referral (d/m/yyyy): "
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtdateref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2014 "
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/btngetdateref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:src="@mipmap/ic_calendar" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of follow-up (d/m/yyyy): "
                android:textSize="16dp" />


            <TextView
                android:id="@+id/txtdatefoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2014 "
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/btngetdatefoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:src="@mipmap/ic_calendar" />


        </TableRow>
    </LinearLayout>

</FrameLayout>
